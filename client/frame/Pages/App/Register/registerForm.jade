template(name="registerForm")
  form(name="registerForm")
    unless step2
      {{> registerFormStep1 }}
      div(class="row")
        unless loading
          button(type="button" data-state="step-2" )
            i(class="fa fa-arrow-right" aria-hidden="true")
            | Go to next step
        else
          div(class="column center")
            i(class="fa fa-spin fa-refresh fa-2x")
            p We're taking you to step 2, please wait...
    else
      {{> registerFormStep2 }}
      div(class="row")
        unless processing
          button(type="submit")
            i(class="fa fa-check" aria-hidden="true")
            | Register
        else
          div(class="column center")
            i(class="fa fa-spin fa-refresh fa-2x")
            p We're registering you, please wait...
            
