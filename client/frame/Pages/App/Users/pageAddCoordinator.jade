template(name="breadcrumbAddCoordinator")
  li(class="crumb") Users
  li(class="crumb") Add
  li(class="crumb active") Coordinator
  
template(name="contentIndicationsAddCoordinator")
  h2 Add a new coordinator
  p To add a new coordinator please fill the form below.
  p Note that unless mentioned, all fields are required.
  
template(name="contentAddCoordinator")
  +contentFor("floatingButtons")
    button(class="floating-button" name="quickAddTrust" type="button" title="Add a trust organization...")
      i( class="fa fa-building-o " aria-hidden="true")
      i(class="fa fa-plus fa-small" aria-hidden="true")
  +contentFor("sidebar")
    if quickAddTrust
      h2 Add a new trust organization
      form(id="quickAddTrust" name="sidebarForm")
        {{> organizationName }}
        {{> inputAddress }}
        {{> inputPhone }}
        {{> textareaAdditionalInformation }}
        div(class="row")
          unless adding  
            button(type="submit")
              i(class="fa fa-plus" aria-hidden='true')
              | Add a new trust organization
          else
            div(class="column center")
              p
                i(class="fa fa-spinner fa-spin fa-2x" aria-hidden="true")
                | We're adding this new trust organization, please wait...
  {{> yield "contentIndications" }}
  div(class="content_form")
    form(name="addCoordinatorForm")
      {{> inputPersonalData }}
      {{> inputEmail }}
      {{> inputPhone }}
      {{> trustList }}
      div(class="row")
        unless adding
          button(type="submit")
            i(class="fa fa-user-plus" aria-hidden='true')
            | Add a new coordinator
        else
          div(class="column center")
            p
              i(class="fa fa-spinner fa-spin fa-2x" aria-hidden="true")
              | We're adding this new coordinator, please wait...
