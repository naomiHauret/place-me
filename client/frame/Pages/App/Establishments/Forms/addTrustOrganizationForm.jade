template(name="addTrustOrganizationForm")
  form
    {{> organizationInput}}
    div(class="row")
      unless adding  
        button(type="submit")
          i(class="fa fa-plus" aria-hidden='true')
          | Add a new trust organization
      else
        div(class="column center")
          p
            i(class="fa fa-spinner fa-spin fa-2x" aria-hidden="true")
            | Loading, please wait...
